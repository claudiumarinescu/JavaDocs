<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">


        <changeSet id="claude-1.0" author="Claudiu">
            <createTable tableName="ClaudiusPeople">
                <column name="PERS_ID" type="NUMBER(6)">
                    <constraints primaryKey="true"></constraints>
                </column>
                <column name="FIRST_NAME" type="VARCHAR2(40 BYTE)"/>
                <column name="LAST_NAME" type="VARCHAR2(40 BYTE)"/>
                <column name="EMAIL" type="VARCHAR2(30 BYTE)">
                    <constraints nullable="false"></constraints>
                </column>
                <column name="PHONE_NUMBER" type="VARCHAR2(25 BYTE)"/>
                <column name="ADDRESS_ID" type="NUMBER(6)">
                    <constraints nullable="false"></constraints>
                </column>
            </createTable>
        </changeSet>
</databaseChangeLog>
